@inject ArkanCore.MVC.Resources.LocService SharedLocalizer

@{
    Layout = "auth/_Layout";
}

@section topRight{
    <a href="page_register.html" class="btn-link text-white ml-auto">
        @SharedLocalizer.GetLocalizedHtmlString("CreateAccount")
    </a>
}

<div class="row">
    <div class="col col-md-6 col-lg-7 hidden-sm-down">
        @*<div class="text-center">
                <img src="http://alarkkan.net/img/logo.png" style="height:120px" />
            </div>*@
        <h2 class="fs-xxl fw-500 mt-4 text-white">
            @SharedLocalizer.GetLocalizedHtmlString("AlArkkanTrainingCenter")
            <small class="h4 fw-300 mt-3 mb-5 text-white opacity-60">
                @(Html.Raw(SharedLocalizer.GetLocalizedHtmlString("AboutAlArkkan")))
            </small>
        </h2>
        <a href="http://alarkkan.net/" target="_blank" class="fs-lg fw-500 text-white opacity-70">@SharedLocalizer.GetLocalizedHtmlString("LearnMore")&gt;&gt;</a>
        <div class="d-sm-flex flex-column align-items-center justify-content-center d-md-block">
            <div class="px-0 py-1 mt-5 text-white fs-nano opacity-50">
                @SharedLocalizer.GetLocalizedHtmlString("Find_us_on_social_media")
            </div>
            <div class="d-flex flex-row opacity-70">
                <a href="#" class="mr-2 fs-xxl text-white">
                    <i class="fab fa-facebook-square"></i>
                </a>
                <a href="#" class="mr-2 fs-xxl text-white">
                    <i class="fab fa-twitter-square"></i>
                </a>
                <a href="#" class="mr-2 fs-xxl text-white">
                    <i class="fab fa-google-plus-square"></i>
                </a>
                <a href="#" class="mr-2 fs-xxl text-white">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-5 col-xl-4 ml-auto">

        <h1 class="text-white fw-300 mb-3 d-sm-block d-md-none">
            @SharedLocalizer.GetLocalizedHtmlString("UserLogin")
        </h1>
        <div class="card p-4 rounded-plus bg-faded">
            <form id="frmLogin">
                <div class="text-center">
                    <img src="http://alarkkan.net/img/logo.png" style="height:120px" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="username">@SharedLocalizer.GetLocalizedHtmlString("Branch")</label>
                    <select id="branch" name="branch" class="form-control form-control-lg" required>
                        <option hidden></option>
                        <option value="1">@SharedLocalizer.GetLocalizedHtmlString("Jeddah")</option>
                        <option value="2">@SharedLocalizer.GetLocalizedHtmlString("Dammam")</option>
                        <option value="3">@SharedLocalizer.GetLocalizedHtmlString("Madina")</option>
                    </select>
                </div>


                <div class="form-group">
                    <label class="form-label" for="username">@SharedLocalizer.GetLocalizedHtmlString("Username")</label>
                    <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="" value="" required>
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">@SharedLocalizer.GetLocalizedHtmlString("Password")</label>
                    <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="" value="" required>
                </div>

                <div class="row ">
                    <div class="col-lg-12 pr-lg-1 my-2">
                        <button type="submit" class="btn btn-primary btn-block btn-lg">@SharedLocalizer.GetLocalizedHtmlString("SignIn")</button>
                    </div>
                    @*<div class="col-lg-6 pl-lg-1 my-2">
                            <button id="js-login-btn" type="submit" class="btn btn-danger btn-block btn-lg">Secure login</button>
                        </div>*@
                </div>
            </form>
        </div>
    </div>
</div>



